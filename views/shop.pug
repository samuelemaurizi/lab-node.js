extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")
  title #{ pageTitle }

block content
  main
    if prods.length > 0
      .grid
        each product in prods
          article.card.product-item
            header.card__header
              h1.product-title #{product.title}
            .card__image
              img(src="https://imgplaceholder.com/200x200", alt="book")
            .card__content
              h2.product__price $19.99
              p.product__description Lorem ipsum dolor sit amet, consectetur adipisicing elit. Molestiae, quis commodi facere hic voluptatum delectus.
            .card__actions
              button.btn Add to Cart
    else
      h1 No Products Found


    